{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
	    {
	        "name": "default",
	        "requirements": [
                "uperf_src"
	        ]
	    }
    ],
    "requirements": [
	    {
	        "name": "uperf_src",
	        "type": "manual",
	        "manual_info": {
		        "commands": [
		           "git clone https://github.com/HughNhan/uperf.git /root/uperf",
		            "cd /root/uperf; git checkout double-free",
			        "cd /root/uperf; touch less_c_static",
			        "cd /root/uperf; autoreconf --install",
			        "cd /root/uperf; CFLAGS=\"-ggdb -DDEBUG -rdynamic\" ./configure --disable-sctp",
			        "cd /root/uperf; make",
			        "cd /root/uperf; make install",
			        "cd /root/uperf; ldconfig",
			        "/usr/local/bin/uperf -V"
		        ]
	        }
        }
    ]
}
